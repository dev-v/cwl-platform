<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cwl.#{packageName}.mapper.#{javaClassName}Mapper">

  <sql id="insertList">
    (
      #{insertList}
    )
  </sql>

  <!-- 注意检查非空和主键自增属性 -->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert
    into #{tableName}
    <include refid="insertList"></include>
  </insert>

  <delete id="del">
    DELETE FROM #{tableName}
    WHERE id = #{id}
  </delete>

  <delete id="dels">
    delete from #{tableName} where id in
    <foreach item="item" index="index" collection="array" open="("
             separator="," close=")">#{item}
    </foreach>
    <include refid="maxLimit"></include>
  </delete>

  <delete id="delByCondition">
    delete from #{tableName}
    <include refid="where"></include>
  </delete>


  <update id="update">
    update #{tableName}
    <set>
      #{updateSet}
    </set>
    where id = #{id}
  </update>

  <insert id="save" useGeneratedKeys="true" keyProperty="id">
    <!-- 不包含数据库类型为TIMESTAMP（由数据库自动管理）的列 -->
    insert into #{tableName}
    <include refid="insertList"></include>
    ON DUPLICATE KEY
    UPDATE
    <trim suffixOverrides=",">
      #{saveOnDuplicateSet}
    </trim>
  </insert>


  <select id="get" resultType="#{javaClassName}">
    SELECT *
    FROM #{tableName}
    WHERE id = #{id}
  </select>

  <select id="gets" resultType="#{javaClassName}">
    SELECT * FROM #{tableName} WHERE id IN
    <foreach item="item" index="index" collection="array" open="("
             separator="," close=")">#{item}
    </foreach>
  </select>

  <select id="getByCondition" resultType="#{javaClassName}">
    select * from #{tableName}
    <include refid="where"></include>
    limit 1
  </select>

  <select id="getIds" resultType="long">
    select id from #{tableName}
    <include refid="where"></include>
    <include refid="maxLimit"></include>
  </select>


  <select id="queryPage" resultType="#{javaClassName}">
    <include refid="queryList"></include>
    <include refid="where"></include>
  </select>

  <select id="query" resultType="#{javaClassName}">
    <include refid="queryList"></include>
    <include refid="where"></include>
    <include refid="maxLimit"></include>
  </select>


  <select id="has" resultType="int">
    select 1 from #{tableName}
    <include refid="where"></include>
    limit 1
  </select>

  <select id="count" resultType="int">
    select count(*) from #{tableName}
    <include refid="where"></include>
  </select>


  <sql id="maxLimit">
    limit 1000
  </sql>

  <sql id="queryList">
    SELECT #{queryList}
    FROM
      #{tableName}
  </sql>

  <sql id="where">
    <trim prefix="WHERE" prefixOverrides="AND">
      #{where}
    </trim>
  </sql>

</mapper>
